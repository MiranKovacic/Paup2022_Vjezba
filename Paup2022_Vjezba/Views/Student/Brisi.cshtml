@using Paup2022_Vjezba.Models
@model Student
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<strong>Jeste li sigurni da želite obrisati studenta @Model.PrezimeIme (OIB: @Model.OIB)?</strong>

<br />
<br />
@using (Html.BeginForm("Brisi", "Student"))
{
    @Html.AntiForgeryToken();
    <button type="submit" class="btn btn-danger">
        <span class="glyphicon glyphicon-ok" aria-hidden="false">
        </span>
        Izbriši
    </button>

    <br />
    <br />

    @Html.ActionLink("Odustani", "Popis");
}

